<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link href="~/Content/layout.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="navbar">
        <div class="container" id="containerLayout">
            <div class="navbar-header">
                <a href="/Filme/Index" id="logo" class="font">Projeto Cinema</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="links"><a href="/Filme/Index" class="font" style="color: #8257e5">Filmes</a></li>
                    <li class="links"><a href="/Compra/Index" class="font" style="color: #8257e5">Compras</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="padding-top: 80px">
        @RenderBody()
        <hr />
        <footer>
            <p class="font">&copy; @DateTime.Now.Year - Projeto Cinema</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
